@model LoginVM;
@{ Layout = null;
    }
<!DOCTYPE html>


<html lang="en">
<head>
    @*<base href="../../../">*@
    <title>  Stor,Items  &amp;  </title>
    <meta charset="utf-8" />
    <meta name="description" content="Erp System,Accounting ,Hr , Manage ,Requests,Reporting" />
    <meta name="keywords" content="  Group ,  Erp, Erp system, demo erp " />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="  Erp System Demo" />
    <meta property="og:url" content="https://keenthemes.com/metronic" />
    <meta property="og:site_name" content="Keenthemes | Metronic" />
    <link rel="canonical" href="https://preview.keenthemes.com/metronic8" />
    <link rel="shortcut icon" href="~/wwwroot/favicon.ico" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />
    <link href="~/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/style.bundle.css" rel="stylesheet" type="text/css" />

</head>

<body id="kt_body" class="bg-body">
    <!--begin::Main-->
    <div class="d-flex flex-column flex-root">
        <!--begin::Authentication - Sign-in -->
        <div class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed" style="background-image: url('/assets/media/illustrations/sketchy-1/14.png')">
            <!--begin::Content-->
            <div class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20">
                <!--begin::Logo-->
                <a href="#" class="mb-12">
                    <img alt="Logo" src="~/assets/media/logos/logo-1-dark.svg" width="150" />
                </a>
                <!--end::Logo-->
                <!--begin::Wrapper-->
                <div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
                    <!--begin::Form-->
                    <form class="form w-100" method="post" action="/account/login">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <!--begin::Heading-->
                        <div class="text-center mb-10">
                            <!--begin::Title-->
                            <h1 class="text-dark mb-3">Sign In to Store</h1>
                            <div class="text-gray-400 fw-bold fs-4">
                                New Here?
                                <a href="/account/register" class="link-primary fw-bolder">Create an Account</a>
                            </div>
                            <div class="fv-plugins-message-container invalid-feedback">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>

                        </div>
                        <div class="fv-row mb-10">
                            <!--begin::Label-->
                            <label class="form-label fs-6 fw-bolder text-dark">Email /User Name</label>
                            <!--end::Label-->
                            <!--begin::Input-->
                            <input class="form-control form-control-lg form-control-solid" type="text" asp-for="UserName" autocomplete="off" />
                            <div class="fv-plugins-message-container invalid-feedback">
                                <span asp-validation-for="UserName"></span>
                            </div>
                        </div>
                        <div class="fv-row mb-10">
                            <div class="d-flex flex-stack mb-2">
                                <label class="form-label fw-bolder text-dark fs-6 mb-0">Password</label>
                                <a href="/account/ForgotPassword" class="link-primary fs-6 fw-bolder">Forgot Password ?</a>
                            </div>
                        
                            <input class="form-control form-control-lg form-control-solid" type="password" asp-for="Password" autocomplete="off" />
                            <div class="fv-plugins-message-container invalid-feedback">
                                <span asp-validation-for="Password"></span>
                            </div>
                            <!--end::Input-->
                        </div>
                        <div class="fv-row mb-10">
                            <div class="form-check form-check-custom form-check-solid">
                                <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
                                <label @*asp-for="RememberMe"*@ for="RememberMe" class="d-flex align-items-center fs-6 fw-bold mb-2">
                                    Remember me
                                </label>
                            </div>

                        </div>
                        <!--end::Input group-->
                        <!--begin::Actions-->
                        <div class="text-center">
                            <!--begin::Submit button-->
                            <button type="submit" class="btn btn-lg btn-primary w-100 mb-5">
                                <span class="indicator-label">Continue</span>
                                <span class="indicator-progress">
                                    Please wait...
                                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                </span>
                            </button>

                        </div>
                        <!--end::Actions-->
                    </form>
                    <!--end::Form-->
                </div>
                <!--end::Wrapper-->
            </div>
            <!--end::Content-->
        </div>
        <!--end::Authentication - Sign-in-->
    </div>

    <script src="~/assets/plugins/global/plugins.bundle.js"></script>
    <script src="~/assets/js/scripts.bundle.js"></script>
       <script src="~/assets/js/custom/authentication/sign-in/general.js"></script>
</body>
</html>